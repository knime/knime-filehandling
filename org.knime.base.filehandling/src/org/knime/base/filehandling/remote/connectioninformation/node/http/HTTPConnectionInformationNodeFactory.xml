<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE knimeNode PUBLIC "-//UNIKN//DTD KNIME Node 2.0//EN" "http://www.knime.org/Node.dtd">
<knimeNode icon="./httpconnection16x16.png" type="Source">
    <name>HTTP Connection</name>

    <shortDescription>
        Configures the connection information used to connect to a
        remote host.
    </shortDescription>

    <fullDescription>
        <intro>
            This node configures the connection information that will be used to
            connect to a remote host.
        </intro>

        <tab name="Options">
            <option name="Host">
                Address of the host.
            </option>
            <option name="Port">
                Port of the service.
            </option>
            <option name="Authentication">
                Method of authentication.
                <br/>
                <b>None</b>
                <br/>
                Do not authenticate.
                <br />
                <b>Password</b>
                <br />
                Use username and password to authenticate.
            </option>
            <option name="Workflow credentials">
                Use workflow credentials to determine user
                and password.
            </option>
            <option name="User">
                Name of the user.
            </option>
            <option name="Password">
                Password of the user or to the keyfile, if
                authentication via keyfile is
                selected.
            </option>
            <option name="Timeout">
                Specify the timeout for the connection in milliseconds here.
            </option>
        </tab>

        <tab name="Proxy Settings">
            <option name="Use Proxy">
                Select (and provide information) to use an http-proxy service.
            </option>
            <option name="Host">
                Address of the http-proxy.
            </option>
            <option name="Port">
                Port of the service.
            </option>
            <option name="User Authentication">
                Whether the service demands authentication
            </option>
            <option name="Workflow credentials">
                Use workflow credentials to determine user and password.
            </option>
            <option name="User">
                Name of the user.
            </option>
            <option name="Password">
                Password of the user.
            </option>
        </tab>
    </fullDescription>

    <ports>
        <outPort name="Connection information port" index="0">
            Port object
            containing the connection information.
        </outPort>
    </ports>
</knimeNode>
